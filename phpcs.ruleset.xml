<?xml version="1.0"?>
<ruleset name="cl-db-info">
	<description>CL DB Info phpcs Standard.</description>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="cl-db-info" />
		</properties>
	</rule>

	<rule ref="WordPress">
		<exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase"/>
	</rule>
</ruleset>
